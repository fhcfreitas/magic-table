<div class="col-6">
  <%= simple_form_for restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CATEGORY %>
    <%= f.input :description %>
    <%= f.submit action_text: "Add Restaurant", class: 'btn btn-primary' %>
  <% end %>
</div>
